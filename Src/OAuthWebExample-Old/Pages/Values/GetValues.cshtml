@page
@model OAuthWebExample.Pages.Values.GetValuesModel
@{
    ViewData["Title"] = "Values";
}

<h2>Get Values</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
        <div class="row">
            <div class="col-md-10">
                <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <tbody>
                        <tr>
                            <td><b>Id</b></td>
                            <td>@Model.Values.DeviceId</td>
                        </tr>
                        <tr>
                            <td><b>Date</b></td>
                            <td>@Model.Values.Date</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10">
                <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>OBIS</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var deviceValue in Model.Values.Values)
                        {
                        <tr>
                            <td>@deviceValue.Obis</td>
                            <td>@deviceValue.Value</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        }
    </div>
</div>