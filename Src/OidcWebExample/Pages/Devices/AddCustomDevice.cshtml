@page
@model OidcWebExample.Pages.Devices.AddCustomDeviceModel
@{
    ViewData["Title"] = "Devices";
}

<h2>Add a new CustomDevice</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
        <form method="post">
            <div class="form-row">
                <div class="col">
                    <label asp-for="CustomDevice.Name">Custom Device Name</label>
                    <input type="text" class="form-control" asp-for="CustomDevice.Name">
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <label asp-for="CustomDevice.Values[0].Name">Name Value 1</label>
                    <input type="text" class="form-control" asp-for="CustomDevice.Values[0].Name">
                    <label asp-for="CustomDevice.Values[0].Value">Value 1</label>
                    <input type="text" class="form-control" asp-for="CustomDevice.Values[0].Value">
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <label asp-for="CustomDevice.Values[1].Name">Name Value 2</label>
                    <input type="text" class="form-control" asp-for="CustomDevice.Values[1].Name">
                    <label asp-for="CustomDevice.Values[1].Value">Value 2</label>
                    <input type="text" class="form-control" asp-for="CustomDevice.Values[1].Value">
                </div>
            </div>
            <button type="submit" class="btn btn-default">Add</button>
        </form>
        }
    </div>
</div>