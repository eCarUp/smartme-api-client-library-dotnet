@page
@model OidcWebExample.Pages.Devices.SetSmartMeDeviceConfigurationModel
@{
    ViewData["Title"] = "Devices";
}

<h2>Set SmartMeDeviceConfiguration</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
        <form method="post">
            <div class="form-group">
                <label asp-for="DeviceConfig.Id"></label>
                <input type="text" class="form-control" asp-for="DeviceConfig.Id" value="@Model.DeviceConfig.Id" readonly>
            </div>
            <div class="form-group">
                <label asp-for="DeviceConfig.DnsUpdateState"></label>
                <select asp-for="DeviceConfig.DnsUpdateState" value="@Model.DeviceConfig.DnsUpdateState">
                    <option value="0">No Update</option>
                    <option value="1">Update Public IP</option>
                    <option value="2">Update Internal IP</option>
                </select>
            </div>          
            <button type="submit" class="btn btn-default">Update</button>
        </form>        
        }
    </div>
</div>