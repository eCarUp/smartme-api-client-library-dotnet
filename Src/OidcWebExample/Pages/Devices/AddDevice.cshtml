@page
@model OidcWebExample.Pages.Devices.AddDeviceModel
@{
    ViewData["Title"] = "Devices";
}

<h2>Add a new Device</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
        <form method="post">
            <div class="form-group">
                <label asp-for="Device.Name"></label>
                <input type="text" class="form-control" asp-for="Device.Name">
            </div>
            <div class="form-group">
                <label asp-for="Device.DeviceEnergyType"></label>
                <select asp-for="Device.DeviceEnergyType">
                    <option value="0">Unknown</option>
                    <option value="1">Electricity</option>
                    <option value="2">Water</option>
                    <option value="3">Gas</option>
                    <option value="4">Heat</option>
                    <option value="5">HCA</option>
                    <option value="6">All Meters</option>
                    <option value="7">Temperature</option>
                    <option value="8">M-BUS Gateway</option>
                    <option value="9">RS-485 Gateway</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Device.ActivePower"></label>
                <input type="text" class="form-control" asp-for="Device.ActivePower">
            </div>
            <div class="form-group">
                <label asp-for="Device.CounterReading"></label>
                <input type="text" class="form-control" asp-for="Device.CounterReading">
            </div>
            <div class="form-group">
                <label asp-for="Device.Voltage"></label>
                <input type="text" class="form-control" asp-for="Device.Voltage">
            </div>
            <div class="form-group">
                <label asp-for="Device.Current"></label>
                <input type="text" class="form-control" asp-for="Device.Current">
            </div>
            <div class="form-group">
                <label asp-for="Device.Temperature"></label>
                <input type="text" class="form-control" asp-for="Device.Temperature">
            </div>
            <button type="submit" class="btn btn-default">Add</button>
        </form>
        }
    </div>
</div>