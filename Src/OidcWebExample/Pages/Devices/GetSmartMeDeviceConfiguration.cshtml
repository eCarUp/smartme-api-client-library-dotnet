@page
@model OidcWebExample.Pages.Devices.GetSmartMeDeviceConfigurationModel
@{
    ViewData["Title"] = "Devices";
}

<h2>Get SmartMeDeviceConfiguration</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
        <div class="row">
            <div class="col-md-10">
                <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <tbody>
                        <tr>
                            <td><b>Device Id</b></td>
                            <td>@Model.DeviceConfig.Id</td>
                        </tr>
                        <tr>
                            <td><b>Upload Interval</b></td>
                            <td>@Model.DeviceConfig.UploadInterval</td>
                        </tr>
                        <tr>
                            <td><b>Switch Configuration</b></td>
                            <td>@Model.DeviceConfig.SwitchConfiguration</td>
                        </tr>
                        <tr>
                            <td><b>Show Reactive Energy</b></td>
                            <td>@Model.DeviceConfig.ShowReactiveEnergy</td>
                        </tr>
                        <tr>
                            <td><b>Enable ModbusTcp</b></td>
                            <td>@Model.DeviceConfig.EnableModbusTcp</td>
                        </tr>
                        <tr>
                            <td><b>Dns Update State</b></td>
                            <td>
                                <select asp-for="DeviceConfig.DnsUpdateState" value="@Model.DeviceConfig.DnsUpdateState" disabled>
                                    <option value="0">No Update</option>
                                    <option value="1">Update Public IP</option>
                                    <option value="2">Update Internal IP</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Device Pin Code</b></td>
                            <td>@Model.DeviceConfig.DevicePinCode</td>
                        </tr>
                        <tr>
                            <td><b>Device Encryption Key</b></td>
                            <td>@Model.DeviceConfig.DeviceEncryptionKey</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        }
    </div>
</div>