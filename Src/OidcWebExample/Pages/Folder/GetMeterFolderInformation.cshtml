@page
@model OidcWebExample.Pages.Folder.GetMeterFolderInformationModel
@{
    ViewData["Title"] = "Folder";
}

<h2>Get Meter Folder Information</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
        <div class="row">
            <div class="col-md-10">
                <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <tbody>
                        <tr>
                            <td><b>Name</b></td>
                            <td>@Model.Info.Name</td>
                        </tr>
                        @if (Model.Info.IsFolder)
                        {
                        <tr>
                            <td><b>Type</b></td>
                            <td>Folder</td>
                        </tr>
                        }
                        else
                        {
                        <tr>
                            <td><b>Type</b></td>
                            <td>Meter</td>
                        </tr>
                        }
                        @if (Model.Info.HardwareVersion != null)
                        {
                        <tr>
                            <td><b>Hardware Version</b></td>
                            <td>@Model.Info.HardwareVersion</td>
                        </tr>
                        }
                        @if (Model.Info.FirmwareVersion != null)
                        {
                        <tr>
                            <td><b>Firmware Version</b></td>
                            <td>@Model.Info.FirmwareVersion</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        }
    </div>
</div>