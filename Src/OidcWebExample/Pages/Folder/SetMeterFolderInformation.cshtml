@page
@model OidcWebExample.Pages.Folder.SetMeterFolderInformationModel
@{
    ViewData["Title"] = "Folder";
}

<h2>Get Meter Folder Information</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
        <form method="post">
            <div class="form-group">
                <label asp-for="InfoToSet.Id"></label>
                <input type="text" class="form-control" asp-for="InfoToSet.Id" value="@Model.InfoToSet.Id" readonly>
            </div>
            <div class="form-group">
                <label asp-for="InfoToSet.Name"></label>
                <input type="text" class="form-control" asp-for="InfoToSet.Name" value="@Model.InfoToSet.Name">
            </div>
            <button type="submit" class="btn btn-default">Update</button>
        </form>
        }
    </div>
</div>