@page
@model OidcWebExample.Pages.Folder.GetFolderModel
@{
    ViewData["Title"] = "Folder";
}

<h2>Get Folder by ID</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
        <div class="row">
            <div class="col-md-10">
                <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <tbody>
                        @if(Model.Folder.ElectricityCounterValue != null) {
                        <tr>
                            <td><b>Electricity Counter Value</b></td>
                            <td>@Model.Folder.ElectricityCounterValue</td>
                        </tr>
                        }
                        @if(Model.Folder.ElectricityPower != null) {
                        <tr>
                            <td><b>Electricity Power</b></td>
                            <td>@Model.Folder.ElectricityPower</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        }
    </div>
</div>