@page
@model OidcWebExample.Pages.Devices.GetDeviceBySerialModel
@{
    ViewData["Title"] = "Devices";
}

<h2>Get Device by Serial</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
            @if (Model.Device != null)
            {
                <div class="row">
                    <div class="col-md-10">
                        <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            <tbody>
                                <tr>
                                    <td><b>ID</b></td>
                                    <td>@Model.Device.Id</td>
                                </tr>
                                <tr>
                                    <td><b>Name</b></td>
                                    <td>@Model.Device.Name</td>
                                </tr>
                                <tr>
                                    <td><b>Serialnumber</b></td>
                                    <td>@Model.Device.Serial</td>
                                </tr>
                                <tr>
                                    <td><b>Last seen (UTC)</b></td>
                                    <td>@Model.Device.ValueDate</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <a>No device exists with provided serial number</a>
            }
        }
    </div>
</div>