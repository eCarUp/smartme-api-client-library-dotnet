@page
@model OAuthWebExample.Pages.Actions.GetActionsModel
@{
    ViewData["Title"] = "Actions";
}

<h2>Get Actions</h2>

<div class="row">
    <div class="col-md-12">
        @if (User.Identity.IsAuthenticated)
        {
        <div class="row">
            <div class="col-md-10">
                <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <tbody>
                        <tr>
                            <td><b>ID</b></td>
                            <td>@Model.Id</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10">
                <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>ObisCode</th>
                            <th>ActionType</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var action in Model.Actions)
                        {
                        <tr>
                            <td>@action.Name</td>
                            <td>@action.ObisCode</td>
                            <td>@action.ActionType</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        }
    </div>
</div>